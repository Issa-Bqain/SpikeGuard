WindowManager:
    current: app.current_screen
    FirstWindow:
    SecondWindow:

<FirstWindow>:
    name: "first"

    MDScreen:
        MDLabel:
            text: "VICI"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.88}
            font_style: "H3"

        MDLabel:
            text: "Press Connect to connect device!"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            font_size: "16sp"

        MDFillRoundFlatButton:
            text: "Connect"
            pos_hint: {"center_x": 0.5, "center_y": 0.12}
            font_style: "Button"
            font_size: "24sp"
            on_release: app.change_screen()

<SecondWindow>:
    name: "second"

    MDScreen:
        MDLabel:
            text: "VICI"
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.88}
            font_style: "H3"

        MDSpinner:
            size_hint: None, None
            size: dp(50), dp(50)
            pos_hint: {'center_x': .5, 'center_y': .5}
            active: True

        MDLabel:
            text: "Connecting..."
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            font_size: "16sp"
